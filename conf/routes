# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Navigation
GET     /                           controllers.NavigationCtrl.index
GET     /home                       controllers.NavigationCtrl.home
GET     /header                     controllers.NavigationCtrl.header
GET     /footer                     controllers.NavigationCtrl.footer
GET     /program                    controllers.NavigationCtrl.program
GET     /streaming                  controllers.NavigationCtrl.streaming

# API
GET     /api/airplayInfo            controllers.api.StreamingInfoCtrl.getInfoFromAirPlay()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

    